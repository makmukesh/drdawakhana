<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_dop_shadow_editext_color"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_no_image"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:visibility="visible">

                <TextView android:fontFamily="@font/opensans_regular"
                    android:id="@+id/txt_productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|start"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />


                <LinearLayout
                    android:id="@+id/ll_mrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView android:fontFamily="@font/opensans_regular"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="MRP"
                        android:textColor="@color/app_color_black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated,HardcodedText" />

                    <TextView android:fontFamily="@font/opensans_regular"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:gravity="center_vertical"
                        android:text=":"
                        android:visibility="gone"
                        android:textColor="@color/app_color_black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <TextView android:fontFamily="@font/opensans_regular"
                        android:id="@+id/txt_productQtyTitle"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".6"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@color/app_color_black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView android:fontFamily="@font/opensans_regular"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="Qty."
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated,HardcodedText" />

                    <TextView android:fontFamily="@font/opensans_regular"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".1"
                        android:gravity="center_vertical"
                        android:text=":"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <TextView android:fontFamily="@font/opensans_regular"
                        android:id="@+id/txt_productQty"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView android:fontFamily="@font/opensans_regular"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="Amount"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated,HardcodedText" />

                    <TextView android:fontFamily="@font/opensans_regular"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".1"
                        android:gravity="center_vertical"
                        android:text=":"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <TextView android:fontFamily="@font/opensans_regular"
                        android:id="@+id/txt_productAmount"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>