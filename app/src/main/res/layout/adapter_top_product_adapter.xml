<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_dop_shadow_home_color"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_rectangle_color_home"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ll_main"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_product"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView_wishlist"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:src="@drawable/n_ic_wishlist"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_productName"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:text="Dummy"
                android:textColor="#000"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:id="@+id/txt_productAmount"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="Rs.000.00 "
                android:textColor="#20B3A9"
                android:textSize="13dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#f4f4f4" />

            <LinearLayout
                android:id="@+id/ll_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Add to cart"
                    android:textColor="@color/iconcolor"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/LL_Qty_puli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_productMinus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_round_rectangle_color"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="-"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="Deprecated,HardcodedText" />

                    <TextView
                        android:id="@+id/txt_productValue"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_round_rectangle_color"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        tools:ignore="Deprecated" />

                    <TextView
                        android:id="@+id/txt_productPlus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bg_round_rectangle_color"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="+"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="Deprecated,HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_qty_kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">


                    <TextView
                        android:id="@+id/txt_productPacking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_round_rectangle_color"
                        android:drawableRight="@drawable/ic_expand_more_white"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        tools:ignore="Deprecated" />

                </LinearLayout>

                <!--  <ImageView
                      android:contentDescription="@string/app_name"

                      android:id="@+id/btn_addToCart"
                      android:layout_width="wrap_content"
                      android:layout_height="40dp"
                      android:adjustViewBounds="true"
                      app:srcCompat="@drawable/icon_bag" />-->
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>