<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D2F0EE"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.vpipl.drdawakhana.Utils.CircularImageView
                android:id="@+id/iv_Profile_Pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="top"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_circle"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher_round"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/LL_Nav"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_welcome_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="axaaa"
                    android:textColor="#225072"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt_header_mobileno"
                    tools:ignore="HardcodedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="9xxxxxxxx"
                    android:textColor="#1F5070"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:backgroundTint="#D2F0EE"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nav_lin_shop_by_category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/n_ic_categories"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Shop By Category"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_lin_my_orders"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/n_ic_my_order"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="My Orders"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_lin_noti"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_notification_white"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Notifications"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_lin_mywishlist"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/n_ic_wishlist"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Wishlist"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_lin_get_membership"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:visibility="visible"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/n_ic_membership"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Get MemberShip"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_lin_chanpass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_lock"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Change Password"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_lin_feedback"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/n_ic_feedback"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Feedback"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_lin_contact_us"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/n_ic_contact"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Contact Us"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_lin_share"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_share_white"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Share"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_lin_logout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_icon_log_out"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_lin_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/se_menu_click"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_cart_white"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Cart"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_lin_profile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:background="@drawable/se_menu_click"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_user_white"
                    android:tint="@color/color20B1AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_app_logo" />

</LinearLayout>

